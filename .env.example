# 数据库配置
DATABASE_URL="postgresql://username@localhost:5432/dnd_character_db?schema=public"

# 会话密钥（至少32个字符，生产环境务必更换）
SESSION_SECRET="your_session_secret_key_at_least_32_characters_long"

# 阿里云（短信 + 邮件推送共用 AccessKey）
# ALIYUN_ACCESS_KEY_ID="your_access_key_id"
# ALIYUN_ACCESS_KEY_SECRET="your_access_key_secret"
# 短信（可选）
# ALIYUN_SMS_SIGN_NAME="你的短信签名"
# ALIYUN_SMS_TEMPLATE_CODE="SMS_xxxxxxxxx"
# 邮件推送 Direct Mail（注册/改密/换邮箱验证码）。配置说明见 云端配置指南.md 第 2.5 节
# ALIYUN_DM_ACCOUNT_NAME="发信地址@你的域名"
# ALIYUN_DM_FROM_ALIAS="D&D角色卡"

# Next.js 公共路径（用于子路径部署，生产环境设置为 /charactersheet2024）
NEXT_PUBLIC_BASE_PATH=""

# 图片 CDN/OSS 地址（可选，用于 OSS 加速 + 用户立绘上传后访问）
# 当前项目 Bucket：dndcharacter2024.oss-cn-shanghai.aliyuncs.com
NEXT_PUBLIC_PIC_BASE_URL="https://dndcharacter2024.oss-cn-shanghai.aliyuncs.com/charactersheet2024"
# 用户立绘上传 OSS（与 PIC 同 Bucket 时可复用上面 base；需配置 Bucket 读权限）
# OSS_BUCKET="dndcharacter2024"
# OSS_REGION="oss-cn-shanghai"

# 本地强制走正式邮件发送（可选）。设为 1 时：不发控制台验证码、接口不返回 code，与生产一致
# REAL_EMAIL_IN_DEV=1

# E2E 测试账号（可选；未设置时 E2E 测试会跳过，用于 npm run test:e2e）
# E2E_TEST_EMAIL="your-test@example.com"
# E2E_TEST_PASSWORD="your-test-password"
